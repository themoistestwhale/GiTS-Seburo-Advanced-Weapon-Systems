<!-- Seburo AASR Anti Armor Rifle-->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>sacSeburoAASRAT</defName>
    <label>Seburo Anti-Armor Rifle</label>
    <techLevel>Industrial</techLevel>
    <generateCommonality>0.001</generateCommonality> <!-- rare and terrifying-->
    <relicChance>0</relicChance>
    <weaponTags>
      <li>SAC_Gun</li>
      <li>SAC_AntiTankWeapon</li>
    </weaponTags>
    <weaponClasses>
      <li>LongShots</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <description>This monstrosity of a rifle is designed to be wielded by cyberised users against heavily armored targets. Firing high velocity armor piercing rounds, this rifle combines the accuracy of many precision rifles thanks to its advanced electronics and stability with the heavy firepower required to take out tanks or mechs.\n\nThis rifle forgoes the usual optical scope and instead links with the users cybernetics, allowing for extreme accuracy at range.</description>

    <graphicData>
      <texPath>SACGuns/sacSeburoAASR</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.5,1.5)</drawSize>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <Mass>11.5</Mass>
      <AccuracyTouch>0.27</AccuracyTouch>
      <AccuracyShort>0.45</AccuracyShort>
      <AccuracyMedium>0.86</AccuracyMedium>
      <AccuracyLong>0.96</AccuracyLong>
      <RangedWeapon_Cooldown>4.8</RangedWeapon_Cooldown>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.10</MoveSpeed>
		</equippedStatOffsets>
    <costList>
      <Steel>180</Steel>
      <ComponentIndustrial>13</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <displayPriority>429</displayPriority>
    </recipeMaker>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>sac125x130mmPELE</defaultProjectile>
        <warmupTime>4.1</warmupTime>
        <range>53.9</range>
        <soundCast>sacAASRShot</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10.4</power>
        <cooldownTime>2.3</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>11.2</power>
        <cooldownTime>2.3</cooldownTime>
      </li>
    </tools>
		<modExtensions> <!-- Muzzle Flash mod compat-->
			<li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
				<def>MF_StandardMuzzleFalshTwo</def>
				<drawSize>(1.5,1.45)</drawSize>
				<offsets>
					<li>(0.68,0.075)</li>
				</offsets>
			</li>
		</modExtensions>
  </ThingDef>
</Defs>